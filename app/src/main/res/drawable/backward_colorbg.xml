<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!--press goes yellow, otherwise has a color -->
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/fabDisabled"/>
            <stroke android:color="@android:color/white"
                android:width="1dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/fabSelectColor"/>
            <stroke android:color="@android:color/background_dark"
                android:width="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/fabPressed"/>
            <stroke android:color="@android:color/white"
                android:width="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/fabColor"/>
            <stroke android:color="@android:color/background_dark"
                android:width="2dp" />
        </shape>
    </item>

</selector>